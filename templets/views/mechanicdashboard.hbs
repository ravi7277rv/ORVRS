        </div>
    </div>

    {{!--====================== MECHANIC TOTAL LIST OF SERVICING =========================--}}


    {{!--====================== MECHANIC REQUEST FOR SERVICING ==========================--}}

    <div class="mechanic-request-service" id="completed">
        <div class="mechanic-request-service-1">
            <div class="mechanic-request-overlay">
                <div class="hadingservice"><i>List of Services <p>Provided</i></p>
                </div>
                <div class="mechanic-request-service-1-1">
                    <div class="serReqheading">
                        <table class="table-bordered text-center">
                            <tr>
                                <th>UserName</th>
                                <th>UserPhone</th>
                                <th>VehicleName</th>
                                <th>VehicleNumber</th>
                                <th>VehicleReg.No.</th>
                                <th>Location</th>
                                <th>Problem</th>
                                <th>Charges</th>
                                <th>Status</th>
                            </tr>
                            {{#each reqcomp}}
                            <tr>
                                <td>{{user_name}}</td>
                                <td>{{user_phone}}</td>
                                <td>{{vehicle_name}}</td>
                                <td>{{vehicle_number}}</td>
                                <td>{{vehicle_registration_no}}</td>
                                <td>{{location}}</td>
                                <td>{{problem}}</td>
                                <td>{{mechanic_services_charge}}</td>
                                <td>{{status}}</td>
